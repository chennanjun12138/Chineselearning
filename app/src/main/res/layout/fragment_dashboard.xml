<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
android:background="@mipmap/chinese"
    tools:context=".ui.dashboard.DashboardFragment">

    <include layout="@layout/select" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:background="@mipmap/chenyubeijin"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="40dp"
                android:text="成语拼音:"
                android:textColor="@color/black"
                android:textSize="8dp" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:id="@+id/chengyu2"
                android:layout_marginTop="5dp"

                android:maxLines="1"
                android:textSize="10dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center"
                android:text="成语意思:"
                android:textColor="@color/black"
                android:textSize="8dp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:id="@+id/chengyu3"
                android:layout_marginTop="5dp"
                android:textSize="8dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"

                android:layout_marginLeft="40dp"
                android:text="成语典故:"
                android:textColor="@color/black"
                android:textSize="8dp" />

            <TextView
                android:id="@+id/chengyu4"
                android:layout_width="145dp"
                android:layout_height="100dp"
                android:textSize="6dp" />

            <Button
                android:id="@+id/zhanshi"
                android:layout_width="40dp"
                android:layout_height="40dp"
                 android:layout_marginTop="65dp"
                android:background="@drawable/shape_circle"
                android:text="展开"
                android:textColor="@color/black"
                android:textSize="10dp">

            </Button>
        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <Button
        android:id="@+id/chenyulianxi"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_circle"
        android:text="成语练习" />
    <EditText
        android:id="@+id/timushu"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:hint="请输入问题数量"
        >

    </EditText>
</LinearLayout>

</LinearLayout>