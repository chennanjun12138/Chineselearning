<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/paihangbang"
    android:orientation="vertical"
    tools:context=".jifengpaihang">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:text="积分排行榜"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="40dp"
        >

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="1:"
            android:gravity="center"

            android:textSize="30dp"
            android:textColor="@color/black"
            >
        </TextView>
        <TextView
            android:id="@+id/panghan1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="40dp"
            android:textColor="#E2F437"
            >
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="2:"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="@color/black"
            >

        </TextView>

        <TextView
            android:id="@+id/panghan2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#A8A8A1"
            android:textSize="35dp">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="3:"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="@color/black"
            >

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/panghan3"
            android:gravity="center_vertical"
            android:textSize="30dp"
            android:textColor="#A86F2A"
            >

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="4:"
            android:textColor="@color/black"
            android:textSize="30dp">

        </TextView>

        <TextView
            android:id="@+id/panghan4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="25dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            >

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="5:"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="@color/black"
            >

        </TextView>
        <TextView
            android:id="@+id/panghan5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="25dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            >

        </TextView>
    </LinearLayout>
</LinearLayout>