<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/guushi"
    tools:context=".chenyulianxi">

    <TextView
        android:id="@+id/lianxi1"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:textSize="50dp"
        android:layout_height="100dp"
        android:gravity="center"
        >
    </TextView>
    <TextView
        android:id="@+id/lianxi2"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="30dp"
        >

    </TextView>
    <Button
        android:id="@+id/lianxi3"

        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/translucent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >

    </Button>
    <Button
        android:id="@+id/lianxi4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/translucent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >

    </Button>
    <Button
        android:id="@+id/lianxi5"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/translucent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        >

    </Button>
    <Button
        android:id="@+id/lianxi6"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/translucent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"

        >

    </Button>
</LinearLayout>